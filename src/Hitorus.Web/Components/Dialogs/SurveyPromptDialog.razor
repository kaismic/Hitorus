<MudDialog>
    <DialogContent>
        <div class="d-flex flex-column align-center">
            <MudText>@Localizer["PromptText"]</MudText>
            <MudLink Href=@Localizer["SurveyUrl"]
                     Typo="Typo.h6"
                     Target="_blank">
                @Localizer["SurveyLinkText"]
            </MudLink>
        </div>
    </DialogContent>
    <DialogActions>
        <div class="d-flex" style="width: 100%;">
            <MudCheckBox T="bool"
                         Label=@Localizer["DoNotShowAgain"]
                         @bind-Value="@_doNotShowAgain" />
            <MudSpacer/>
            <MudButton Color="Color.Primary"
                       Variant="Variant.Filled"
                       OnClick="@Close">
                @SharedLocalizer["Close"]
            </MudButton>
        </div>
    </DialogActions>
</MudDialog>