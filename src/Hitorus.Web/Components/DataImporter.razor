            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Hitorus.Data.Icons.Import">
                @SharedLocalizer["AppSettings"]
            </MudButton>
        </ActivatorContent>
    </MudFileUpload>
    <MudFileUpload T="IBrowserFile" Accept=".json" OnFilesChanged="@ImportViewPageSettings">
