            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Hitorus.Data.Icons.Import">
                @SharedLocalizer["ViewPageDefaultSettings"]
            </MudButton>
        </ActivatorContent>
    </MudFileUpload>
