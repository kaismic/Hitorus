<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.subtitle1">
            @HeaderText
        </MudText>
        <MudText>
            @ContentText
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="@Close">
            @SharedLocalizer["Close"]
        </MudButton>
    </DialogActions>
</MudDialog>