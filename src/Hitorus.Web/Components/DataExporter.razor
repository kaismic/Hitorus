<div class="d-flex gap-4">
    <MudButton Variant="Variant.Filled"
                Color="Color.Primary"
                StartIcon="@MudBlazor.Icons.Material.Filled.Download"
                OnClick="@ExportTagFilters">
        @SharedLocalizer["TagFilters"]
    </MudButton>
    <MudTooltip Text=@(AppConfigurationService.CurrentApiVersion < MinGalleryExportApiVersion ? string.Format(SharedLocalizer["RequiresHigherVersion"], MinGalleryExportApiVersion.ToString(3)) : "")>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@MudBlazor.Icons.Material.Filled.Download"
                   OnClick="@ExportGalleries"
                   Disabled=@(AppConfigurationService.CurrentApiVersion < MinGalleryExportApiVersion)>
            @SharedLocalizer["Galleries"]
        </MudButton>
    </MudTooltip>
    <MudButton Variant="Variant.Filled"
                Color="Color.Primary"
                StartIcon="@MudBlazor.Icons.Material.Filled.Download"
                OnClick="@ExportAppSettings">
        @SharedLocalizer["AppSettings"]
    </MudButton>
    <MudButton Variant="Variant.Filled"
                Color="Color.Primary"
                StartIcon="@MudBlazor.Icons.Material.Filled.Download"
                OnClick="@ExportViewPageSettings">
        @SharedLocalizer["ViewPageDefaultSettings"]
    </MudButton>
</div>