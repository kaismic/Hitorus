<MudPaper Class="d-flex gap-2 my-2 pa-2 align-center" Outlined>
    <MudIcon Icon="@Icons.Material.Filled.DragIndicator" />
    <MudText>@SharedLocalizer[GallerySort.Property.ToString()]</MudText>
    <MudSpacer />
    <MudSelect T="@SortDirection" @bind-Value="@GallerySort.SortDirection" Variant="Variant.Outlined" Style="min-width: 140px">
        <MudSelectItem T="@SortDirection" Value="SortDirection.Ascending">@SharedLocalizer["Ascending"]</MudSelectItem>
        <MudSelectItem T="@SortDirection" Value="SortDirection.Descending">@SharedLocalizer["Descending"]</MudSelectItem>
    </MudSelect>
    <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => OnDeleteClick.InvokeAsync(GallerySort))" />
</MudPaper>